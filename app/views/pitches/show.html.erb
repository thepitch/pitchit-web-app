<div class="row main-header pitch-show-header">
  <div class="one column">

      <h4 title="Vote"><i class="fa fa-chevron-up

          pitch-vote-up fa-2x" id="<%= @pitch["id"] %>-vote-up"></i></h4>
      <h4 class="pitch-vote-count"><%= @pitch["num_votes"] %></h4>
      <h4 title="Bookmark"><i class='fa fa-bookmark fa-2x

          pitch-bookmark' id="<%= @pitch["id"] %>-bookmark"></i></h4>

      <h4>
      <%= link_to raw("<i class='fa fa-pencil fa-2x'></i>"), edit_pitch_path(@pitch) %></h4>

  </div>
</div>

<div class="row main-inner-header">
  <div class="row">
    <div class="twelve columns"><h1><%= @pitch["title"] %></h1></div>
  </div>
  <div class="row">
    <div class="twelve columns"><h5><em>"<%= @pitch["tagline"] %>"</em></h5></div>
  </div>
  <div class="row author-title">
    <div><h3><%= link_to "#{@pitch["author"]}", user_path(@pitch["user_id"]) %></h3></div>
    <div> <%= @pitch["created_at"] %></div>
  </div>
</div>

<br>

<section class="description">
  <h3>Summary</h3>
  <p><%= @pitch["description"] %></p>
</section>

<div class="media">
  <iframe width="560" height="315" src="<%= @pitch["video"] %>" frameborder="0" allowfullscreen></iframe>
</div>

<br>

<% if @current_user && @current_user["id"] == @pitch["user_id"] %>
  <%= link_to "Edit Your Pitch", edit_pitch_path(@pitch["id"]) %>
<% end %>

<section id="comment-box">
  <h4>Comments (<%= @pitch["comments"].length %>)</h4>
  <div>
      <%= react_component 'CommentList', { pitchcomments: @pitch_comments, pitch: @pitch["id"], user_id: session[:user_id] } %>

  </div>
</section>


