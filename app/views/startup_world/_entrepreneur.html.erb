<div id="entrepreneur-view">
  <div class="row">
    <div class= "three columns tweets">
      <div id="startup-tweets">
        <a class="twitter-timeline" data-dnt="true" href="https://twitter.com/hashtag/startup" data-widget-id="653982952972353537">#startup Tweets</a>
      </div>
    </div>
    <div class = "nine columns news">
      <h3 class="center">Pitch of The Week</h3>
      <div>

      <div class="row">
        <div class="pitch-title eight columns"><h4>THIS IS WHERE link_to @pitch_of_the_week.title, pitch_path(@pitch_of_the_week["id"])</h4></div>

      <p> unless @pitch_of_the_week.media.empty? </p>
        <div> class="three columns video-button" id=" @pitch_of_the_week.id "
          <p> button_to 'Show Video', pitches_path, method: :get, :class => "show-video-button u-pull-right" </p>
          <p> button_to 'Hide Video', pitches_path, method: :get, :class => "hide-video-button u-pull-right", id: "hide" </p>
        </div>
      <p> end </p>
      </div>


      <div class="row pitch-info">
        <div class="one column rank"><p>
          <i class="fa fa-chevron-up
            <% if user_has_voted?(@pitch_of_the_week['id'], 'Pitch') %>
              <%= 'user-has-voted' %>
            <% end %>
          pitch-vote-up fa-2x" id="<%= @pitch_of_the_week['id'] %>-vote-up"></i>
        </p></div>
        <div class="eleven columns"><%= @pitch_of_the_week["tagline"] %></div>
      </div>

      <div class="embedded video" id="<%= @pitch_of_the_week['id'] %>-video"> </div>

      <div class="row pitch-info">
        <div class="one column rank"><p><i class='fa fa-bookmark fa-2x
          <% if user_has_bookmarked?(@pitch_of_the_week['id'], 'Pitch') %>
            <%= 'user-has-bookmarked' %>
          <% end %>
          pitch-bookmark' id="<%= @pitch_of_the_week['id'] %>-bookmark"></i></i></p></div>


        <div class="two columns" id="<%= @pitch_of_the_week['id'] %>-vote-count"><%= @pitch_of_the_week["vote_count"] %> votes</div>
        <div class="two columns"><%= @pitch_of_the_week["comments"].length %> comments</div>
        <div class="four columns"><%= @pitch_of_the_week["created_at"] %></div>
        <div class="three columns pitch-user"><%= link_to @pitch_of_the_week["author"], root_path %></div>
      </div>
    </div>
      <h3 class="center">News From Around the Web</h3>
      <div class="links">
      </div>
    </div>
  </div>
</div>
