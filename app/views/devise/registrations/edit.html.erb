<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: "user_form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="new-pitch field five columns">
      <%= f.text_field :first_name, autofocus: true, placeholder: "first name" %>
    </div>
  </div>

  <div class="row">
    <div class="new-pitch field five columns">
      <%= f.text_field :last_name, autofocus: true, placeholder: "last name" %>
    </div>
  </div>

  <div class="row">
    <div class="new-pitch field five columns">
      <%= f.email_field :email, autofocus: true, placeholder: "email" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
    <div class="new-pitch field five columns">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "password (leave blank if you don't want to change it)" %>
    </div>
  </div>

  <div class="row">
    <div class="new-pitch field five columns">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %>
    </div>
  </div>

  <div class="row">
    <div class="new-pitch field five columns">
      <%= f.url_field :picture_url, autocomplete: "off", placeholder: "avatar url" %>
    </div>
  </div>

  <div class="row">
    <div class="new-pitch field five columns">
      <%= f.text_field :company, placeholder: "company" %>
    </div>
  </div>

  <div class="row">
    <div class="new-pitch field five columns">
      <%= f.label :blurb %><br />
      <%= f.text_area :blurb, placeholder: "blurb" %>
    </div>
  </div>

  <div class="row">
    <div class="new-pitch field five columns">
      <%= f.label :phone %><br />
      <%= f.telephone_field :phone, autocomplete: "off", placeholder: "phone" %>
    </div>
  </div>
    <%= f.label :user_type %>
      <% ['entrepreneur','early_adopter','venture_capitalist'].each do |user_type| %>
      <br>
  <div class="row">
      <div class="one column">
      <%= radio_button_tag 'user[user_type]', user_type, @user_type == user_type %>
      </div>
      <div class="five columns">
      <%= user_type.gsub("_", " ").capitalize %>
      </div>
      <br/>
  </div>
    <% end %>
    <br/>


  <div class="row">
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "button" %></p>

<%= link_to "Back", :back %>
